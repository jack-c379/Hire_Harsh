# .env file (DO NOT SHARE THIS PUBLICLY)

# Model Settings
LLM_MODEL=gpt-4.1-mini # e.g. llama3.2 or gpt-4.1-mini
OLLAMA_MODELS=llama3.2
LLM_PROVIDER="openai" # ollama or openai

# OpenAI Settings (Required for OpenAI provider)
OPENAI_API_KEY=

# Ollama Endpoint (Required for Ollama provider)
OLLAMA_ENDPOINT=http://ollama:11434

# OPTIONAL: Advanced Analytics with Langsmith
# Set LANGSMITH_TRACING=true AND provide LANGSMITH_API_KEY to enable
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=
LANGSMITH_PROJECT="ChatCV"

# OPTIONAL: Enhanced Content Safety with Guardrails AI
# If not provided, basic content validation will be used instead
GUARDRAILS_TOKEN=

# === INVITE CODES Configuration ===
INVITE_CODES={"test": {"company": "Test Company", "recruiter": "Test User", "active": true}, "demo": {"company": "Demo Corp", "recruiter": "Demo User", "active": true}}


# MLFlow Configuration
MLFLOW_TRACKING_URI=./mlruns
# MLFLOW_TRACKING_URI=https://your-mlflow-server.com  # For remote MLFlow server#

ENVIRONMENT=development  # Set to 'production' for production environment

# Logging Configuration
LOG_DIR=./logs
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
